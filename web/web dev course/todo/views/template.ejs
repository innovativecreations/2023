<%- include("header") -%>
    <div id="heading" class="box">
        
        <h1><%= listKaNaam %></h1>
    </div>
<div class="box">
    
    <% for(var i=0; i<kaam.length; i++){ %>
        <div class="item">
            <input type="checkbox">
            <p><%= kaam[i] %></p>
        </div>
    <% } %>
</div> 
   <form action="/" method="post" >
    <input type="text" name="kaam" placeholder="Add New Task" autocomplete="off">
    <button type="submit" name="add" value=<%= listKaNaam %> >+</button>
   </form>
   <%- include("footer") -%>